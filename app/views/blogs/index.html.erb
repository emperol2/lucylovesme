<!-- +++++ Posts Lists +++++ -->
<!-- +++++ First Post +++++ -->
<% @blogs_latest_updated.each do |blog| %>

    <div id="<%= cycle('white','grey') %>">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-lg-offset-2">
            <p><img class="blog user" src="assets/my_image.jpg" width="50px" height="50px"> <ba><%= blog.name %></ba></p>
            <p><bd><%= blog.created_at.localtime.strftime("%B %e at %l:%M %p") %></bd></p>
            <h4><%= blog.title %></h4>
            <p><%= truncate blog.desc.html_safe, length: 300, :escape => false, separator: '' %></p>
            <p><%= link_to 'Continue Reading...', blog_path(blog) %></p>
          </div>
        </div><!-- /row -->
      </div> <!-- /container -->
    </div><!-- /grey -->

<% end %>