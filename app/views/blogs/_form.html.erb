<%= form_for(@blog) do |f| %>
    <% if @blog.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

          <ul>
            <% @blog.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_area :title, :class => "form-control input-lg" %>
    </div>
    <div class="form-group">
      <%= f.label :image %><br>
      <%= f.text_area :image, :class => "form-control input-lg" %>
    </div>
    <div class="form-group">
      <%= f.label :desc %><br>
      <%= f.text_area :desc, :rows => 10, :class => "form-control input-lg" %>
    </div>
    <div class="form-group">
      <%= f.label :tag %><br>
      <%= f.text_area :tag, :class => "form-control input-lg" %>
    </div>
    <div class="form-group">
      <%= f.label :user_id %><br>
      <%= f.number_field :user_id, :class => "form-control input-lg" %>
    </div>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_area :name, :class => "form-control input-lg" %>
    </div>
    <div class="form-group">
      <%= f.submit "Update Blog", :class => "btn btn-success btn-block btn-lg" %>
    </div>
<% end %>